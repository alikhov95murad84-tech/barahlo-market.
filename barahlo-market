                iconClass: "fas fa-mobile-alt"
            },
            {
                title: "Гитара акустическая",
                price: "5 500 ₽",
                description: "Новые струны, чехол в комплекте.",
                iconClass: "fas fa-guitar"
            }
        ];

        // Создаём карточку товара
        function createProductCard(product) {
            const article = document.createElement('article');
            article.className = 'product-card';
            article.setAttribute('tabindex', '0');
            article.dataset.title = product.title;

Murad, [13.08.2025 4:20]
article.innerHTML = 
                <div class="product-image" aria-hidden="true">
                    <i class="${product.iconClass}"></i>
                </div>
                <div class="product-info">
                    <h3>${product.title}</h3>
                    <div class="product-price">${product.price}</div>
                    <p class="product-description">${product.description}</p>
                    <div class="product-actions">
                        <button class="add-to-cart" type="button" aria-label="Добавить в корзину ${product.title}">В корзину</button>
                        <button class="details-btn" type="button" aria-label="Подробнее о ${product.title}">Подробнее</button>
                    </div>
                </div>
            ;
            return article;
        }

        // Загрузка товаров и установка обработчиков
        document.addEventListener('DOMContentLoaded', () => {
            const productList = document.getElementById('productList');
            productList.innerHTML = '';

            productsData.forEach(product => {
                const card = createProductCard(product);
                productList.appendChild(card);
            });

            const cartCountElement = document.querySelector('.cart-count');
            let cartCount = 0;

            productList.querySelectorAll('.add-to-cart').forEach(button => {
                button.addEventListener('click', () => {
                    if (button.disabled) return;
                    cartCount++;
                    cartCountElement.textContent = cartCount;
                    button.disabled = true;
                    button.textContent = '✓ Добавлено';
                    button.style.backgroundColor = 'var(--success)';
                });
            });

            productList.querySelectorAll('.details-btn').forEach(button => {
                button.addEventListener('click', () => {
                    const productCard = button.closest('.product-card');
                    const title = productCard.dataset.title;
                    alert(Подробная информация о товаре: ${title});
                });
            });

            // Поиск товаров
            const searchForm = document.querySelector('.search-bar');
            const searchInput = searchForm.querySelector('input');

            function filterProducts(query) {
                const lowerQuery = query.toLowerCase().trim();
                const products = productList.querySelectorAll('.product-card');
                products.forEach(product => {
                    const title = product.dataset.title.toLowerCase();
                    if (title.includes(lowerQuery)) {
                        product.style.display = 'flex';
                        product.setAttribute('tabindex', '0');
                    } else {
                        product.style.display = 'none';
                        product.setAttribute('tabindex', '-1');
                    }
                });
            }

            searchForm.addEventListener('submit', e => {
                e.preventDefault();
                filterProducts(searchInput.value);
            });

            searchInput.addEventListener('input', () => {
                if (searchInput.value.trim() === '') {
                    filterProducts('');
                }
            });
        });
    </script>
</body>
</html>
