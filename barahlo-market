    <script>
        // Данные товаров (автоматическая загрузка)
        const productsData = [
            {
                title: "Ноутбук ASUS (б/у)",
                price: "12 500 ₽",
                description: "Рабочий, немного поцарапан, батарея держит 2 часа.",
